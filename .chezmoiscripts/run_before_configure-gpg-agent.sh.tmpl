{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash
GPG_AGENT_CONF="$HOME/.gnupg/gpg-agent.conf"
PINENTRY="/opt/homebrew/bin/pinentry-mac"

if [ -f "$PINENTRY" ]; then
  mkdir -p "$HOME/.gnupg"
  if ! grep -q "pinentry-program $PINENTRY" "$GPG_AGENT_CONF" 2>/dev/null; then
    echo "pinentry-program $PINENTRY" > "$GPG_AGENT_CONF"
    gpgconf --kill gpg-agent
  fi
fi
{{ end -}}
